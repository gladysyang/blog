<%- include header %>
    <form method="post">
        标题: <br>
        <input type="text" name="title" value="<%=post.title%>" disabled><br>
        标签： <br>
        <%if (post.tags) { %>
        <input type="text" name="tag1" class="tag1" value="<%=post.tags[0] ? post.tags[0] : ''%>">
        <input type="text" name="tag2" class="tag1" value="<%=post.tags[1] ? post.tags[1] : ''%>">
        <input type="text" name="tag3" class="tag1" value="<%=post.tags[2] ? post.tags[2] : ''%>">
        <% } else { %>
        <input type="text" name="tag1" class="tag1">
        <input type="text" name="tag2" class="tag1">
        <input type="text" name="tag3" class="tag1">
        <% } %><br>
        正文: <br>
        <textarea cols="70" rows="20" name="content"><%=post.content%></textarea><br>
        <input type="submit" value="保存修改">
    </form>
<%- include footer %>
